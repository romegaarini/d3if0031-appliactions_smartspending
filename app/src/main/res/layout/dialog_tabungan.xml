<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/pemasukan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pemasukan_kamu"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_0"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:layout_toEndOf="@+id/pemasukan_tv" />

    <TextView
        android:id="@+id/pengeluaran_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pengluaran_kamu"
        android:layout_below="@+id/pemasukan_tv"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/pengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/pemasukan"
        android:text="@string/rp_0"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:layout_toEndOf="@+id/pengeluaran_tv" />

    <TextView
        android:id="@+id/main_saldo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pengeluaran_tv"
        android:text="@string/saldo_kamu"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/pengeluaran"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:layout_toEndOf="@+id/pengeluaran_tv"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>